@using MvcOnlineTicariOtomasyon.Models.Siniflar
@model List<Personel>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}

<table class="table table-bordered">
    <tr>
        <th>ID</th>
        <th>Personel Adı</th>
        <th>Soyadı</th>
        <th>Görsel</th>
        <th>Departman</th>
        <th>Güncelle</th>
        <th>Satışlar</th>
    </tr>
    @foreach (var k in Model)
    {
        <tr>
            <td>@k.PersonelId</td>
            <td>@k.PersonelAdı</td>
            <td>@k.personelSoyadı</td>
            <td>@k.PersonelGorsel</td>
            <td>@k.Departman.DepartmanAdı</td>
           
            <td>
                <a href="/Personel/Personel Getir/@k.PersonelId" class="btn btn-success"> Güncelle</a>
            </td>
            <td>
                <a href="/Departman/DepartmanPersonelSatis/@k.PersonelId" class="btn btn-success" style="background-color:darkviolet">Detaylar</a>

            </td>

        </tr>
    }


</table>
<a href="/Personel/PersonelEkle/" class="btn btn-info">Personel  Ekle</a>

