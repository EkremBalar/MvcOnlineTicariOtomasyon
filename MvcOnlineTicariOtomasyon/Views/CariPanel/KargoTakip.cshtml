@using MvcOnlineTicariOtomasyon.Models.Siniflar
@model List<KargoDetay>
@{
    ViewBag.Title = "KargoTakip";
    Layout = "~/Views/Shared/_CariLayout.cshtml";
}

<br />
@using (Html.BeginForm("KargoTakip", "CariPanel", FormMethod.Get))
{
    <p>
        Kargo Takip Numarası: @Html.TextBox("p")
        <input type="submit" value="Ara" />
    </p>
}

<table class="table table-bordered">
    <tr>

        <th>PERSONEL</th>
        <th>ALICI</th>
        <th>TAKİP KODU</th>
        <th>TARİH</th>
        <th>DETAYLAR</th>

    </tr>
    @foreach (var k in Model)
    {
        <tr>
            <td>@k.Personel</td>
            <td>@k.Alici</td>
            <td>@k.TakipKodu</td>
            <td>@k.Tarih</td>

            <td>
                <a href="/Kargo/KargoTakip/@k.TakipKodu" class="btn btn-success" style="background-color:darkviolet">Detaylar</a>

            </td>

        </tr>
    }


</table>



