@using MvcOnlineTicariOtomasyon.Models.Siniflar
@using PagedList
@using PagedList.Mvc
@model PagedList.IPagedList<Kategori>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}

<table class="table table-bordered" style=" margin-top:20px;">
    <tr>
        
        <th>Kategori Adı</th>
        <th>SİL</th>
        <th>GÜNCELLE</th>


    </tr>
    @foreach (var k in Model)
    {
        <tr>
            <td>@k.KategoriAdı</td>
            <td>
                    <a href="/Kategori/KategoriSil/@k.KategoriId" class="btn btn-danger">Sil</a>
                </td>
                <td>
                    <a href="/Urun/UrunGetir/@k.KategoriId" class="btn btn-success">Güncelle</a>
                </td>
        </tr>
    }

</table>

@Html.PagedListPager((IPagedList)Model,sayfa=> Url.Action("Index",new {sayfa}))

<a href="/Kategori/KategoriEkle/" class="btn btn-primary">Kategori Ekle</a>

