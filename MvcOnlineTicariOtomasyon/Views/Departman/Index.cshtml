@using MvcOnlineTicariOtomasyon.Models.Siniflar
@model List<Departman>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}

<table class="table table-bordered">
    <tr>
        <th>ID</th>
        <th>Departman Adı</th>
        <th>SİL</th>
        <th>GÜNCELLE</th>
        <th>DETAYLAR</th>

    </tr>
    @foreach (var k in Model)
    {
        <tr>
            <td>@k.DepartmanId</td>
            <td>@k.DepartmanAdı</td>
            <td>
                <a href="/Departman/DepartmanSil/@k.DepartmanId" class="btn btn-danger">Sil</a>
            </td>
            <td>
                <a href="/Departman/DepartmanGetir/@k.DepartmanId" class="btn btn-success">Departman Guncelle</a>
            </td>
            <td>
                <a href="/Departman/DepartmanDetay/@k.DepartmanId" class="btn btn-success" style="background-color:darkviolet">DepartmanDetay</a>

            </td>

        </tr>
    }


</table>
<a href="/Departman/DepartmanEkle/" class="btn btn-info">Departman Ekle</a>

